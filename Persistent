# --- PERSISTENT UNIT CONVERTER ---

# We use a variable to control the loop
keep_running = True

while keep_running:
    print("\n" + "="*30)
    print("      UNIT CONVERTER MENU")
    print("="*30)
    print("1: Temperature (C to F)")
    print("2: Distance (Km to Miles)")
    print("3: Exit Program")
    
    choice = input("\nChoose an option (1, 2, or 3): ")

    if choice == "1":
        print("\n--- Temperature Conversion ---")
        celsius = float(input("Enter temperature in Celsius: "))
        fahrenheit = (celsius * 1.8) + 32
        print(f"Result: {fahrenheit} degrees Fahrenheit")

    elif choice == "2":
        print("\n--- Distance Conversion ---")
        kilometers = float(input("Enter distance in Kilometers: "))
        miles = kilometers * 0.621371
        print(f"Result: {miles:.2f} miles")

    elif choice == "3":
        print("Exiting the program... Goodbye!")
        keep_running = False  # This breaks the loop
        
    else:
        print("Invalid option! Please try again.")

print("Program closed successfully.")
